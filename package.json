{
  "name": "lynx-notification",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "rspeedy build",
    "build:packages": "npm run build --workspaces --if-present",
    "ci:all": "npm run lint && npm run test && npm run test:packages && npm run typecheck:packages && npm run build:packages && npm run build",
    "dev": "rspeedy dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "preview": "rspeedy preview",
    "release:alpha:dry-run": "npm publish --workspace @lynx-notifications/core --tag alpha --access public --dry-run && npm publish --workspace lynx-notifications --tag alpha --access public --dry-run",
    "test": "vitest run",
    "test:packages": "npm run test --workspaces --if-present",
    "typecheck:packages": "npm run typecheck --workspaces --if-present"
  },
  "dependencies": {
    "@lynx-js/react": "^0.116.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@lynx-js/preact-devtools": "^5.0.1",
    "@lynx-js/qrcode-rsbuild-plugin": "^0.4.4",
    "@lynx-js/react-rsbuild-plugin": "^0.12.7",
    "@lynx-js/rspeedy": "^0.13.3",
    "@lynx-js/types": "3.6.0",
    "@rsbuild/plugin-type-check": "1.3.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/react": "^18.3.27",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
